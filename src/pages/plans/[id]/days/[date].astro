---
import Layout from '@/layouts/Layout.astro';
import { PlanDayPage } from '@/components/planDay/PlanDayPage';

const { id, date } = Astro.params;
const planId = Number(id);

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_KEY;
---

<Layout title="Plan Day">
  <PlanDayPage client:only="react" planId={planId} date={date} supabaseUrl={supabaseUrl} supabaseKey={supabaseKey} />
</Layout>
