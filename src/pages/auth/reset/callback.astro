---
import Layout from "../../../layouts/Layout.astro";
import { AuthResetConfirmForm } from "../../../components/auth/AuthResetConfirmForm.tsx";
---

<Layout title="Ustaw nowe hasło">
  <div class="min-h-screen mx-auto max-w-2xl px-4 py-8">
    <div class="w-full">
      {/* Top Icon */}
      <div class="flex justify-center mb-8">
        <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-primary"
          >
            <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
        </div>
      </div>

      {/* Title */}
      <h1 class="text-4xl font-bold text-center mb-2">Ustaw nowe hasło</h1>
      <p class="text-center text-muted-foreground mb-8">Wprowadź nowe hasło dla swojego konta</p>

      {/* Form */}
      <AuthResetConfirmForm client:load />

      {/* Link to Login */}
      <div class="mt-6 text-center">
        <a href="/auth/login" class="text-sm text-primary underline hover:text-primary/80"> Wróć do logowania </a>
      </div>
    </div>
  </div>
</Layout>
